@model RegisterModel;

<div class="container-fluid">
    <div class="row">
        <div class="col-2 m-1 p-1">
            <h2 class="m-1 p-1">Registration</h2>
            <form asp-action="Registration" method="post">                
                <input class="form-control  m-2 p-2" asp-for="UserName" placeholder="Username"/>
                <input class="form-control  m-2 p-2" asp-for="Email" placeholder="Email"/>
                <input class="form-control  m-2 p-2" asp-for="Password" placeholder="Password"/>

                <div>
                    <button type="submit" class="btn btn-outline-secondary m-2 p-2">Registration</button>
                    <a asp-action="Login" class="nav-link">Login</a>
                </div>
            </form>
        </div>
    </div>
</div>